  <child link="laser_1"/>
</joint>

<!--Joint Tilt-->

<joint name="tilt_joint" type="revolute">
  <origin rpy="0 0 0" xyz="0.02715 -0.009586 0.030691"/>
  <parent link="pan_1"/>
  <child link="tilt_1"/>
  <axis xyz="5.3e-05 -0.01 -9e-06"/>
  <limit effort="1000" lower="-1.434661" upper="1.434661" velocity="100"/>
